<%- include("partials/header"); -%>

<div class="deleter-header">
    <div class="user-info-wrapper">
        <a href="https://twitter.com/<%= username %>"><img class="profile-img" src="<%= profileImgUrl %>" alt=""></a>
        <a class="username" href="https://twitter.com/<%= username %>">@<%= username %></a>
    </div>

    <a class="logout-link" href="/logout">logout <i class="fa fa-sign-out"></i></a>
</div>

<div class="deleter-content-wrapper">
    <!-- Compose Tweet -->
    <form class="tweet-form" action="/tweet" method="POST">
        <textarea class="tweet-content" type="text" name="tweet" maxlength="280" rows="5" placeholder="Tweet something..."></textarea>

        <p class="char-count"></p>
        
        <button class="btn tweet-btn" type="submit">Tweet</button>
    </form>

    <!-- Delete Likes -->
    <form id="delete-like-form" action="/delete-likes" method="POST">
        <h1 class="form-title">Delete Likes</h1>
        
        <label class="form-label" for="like-del-num">How many?</label>
        <input id="like-del-num" class="like-del-num number-input" type="number" name="likeDelNum" min="1" max="200" value="1"/>
        
        <input class="like-del-checkbox" type="checkbox" id="like-del-max" name="likeDelMax" value="10">
        <label class="form-label" for="like-del-max">Max (200)</label><br>

        <button class="btn confirm-del-btn" type="submit">Delete <i class="fa fa-check"></i></button>        
    </form>
</div>

<script src="deleter.js"></script>

<%- include("partials/footer"); -%>